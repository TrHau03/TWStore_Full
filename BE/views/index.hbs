    <script>
        function format2(n, currency) {
            return currency + n.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
        }
        const fetchAPI = async (url, option) => {
            const res = await fetch(url, option);
            return res.json();
        }
        const getOrderWaiting = async () => {
            const url = `/order/getAllOrder`;
            const option = {
                method: 'GET',
                headers: { 'Content-Type': 'application/json' },
            }
            const res = await fetchAPI(url, option);
            return res;
        }
        const getRevenueByMonth = async () => {
            const url = `/ordersCpanel/RevenueByMonth`;
            const option = {
                method: 'GET',
                headers: { 'Content-Type': 'application/json' },
            }
            const res = await fetchAPI(url, option);
            console.log(res)
            return res;
        }
        const getRevenue = async () => {
            const date = new Date();
            const year = date.getFullYear();
            console.log(year);
            const url = `/ordersCpanel/RevenueByYear/${year}`;
            const option = {
                method: 'GET',
                headers: { 'Content-Type': 'application/json' },
            }
            const res = await fetchAPI(url, option);
            return res;
        }
        getOrderWaiting().then((val) => {
            document.getElementById('orderWaiting').innerHTML = val.filter((item) => item.status === 1).length;
            const totalOrder = val.length;
            const orderSuccess = val.filter((item) => item.status != 5).length;
            console.log(100 - (orderSuccess / totalOrder * 100));
            renderPieChart([val.filter((item) => item.status === 6).length, val.filter((item) => item.status === 5).length])
        });
        getRevenueByMonth().then((val) => {
            document.getElementById('revenueByMonth').innerHTML = new Intl.NumberFormat().format(val) + ' đ';
        })
        getRevenue().then((val) => {
            renderChart(val);
        })
